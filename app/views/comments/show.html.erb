<link rel="stylesheet" href="comments.scss"/>
<% if @comments == nil%>
<p>Sorry</p>
<%else%>
<h2>Add a comment</h2>
<% @comments.each do |comment|%>
<p> <%= comment.body%>
<%= link_to 'Delete', product_comment_path(:id=>comment.id), method: :put, data: { confirm: 'are_you_sure?' } %> </p>

<% end %>
<% end %>

<%= render 'comments/form' %>
