<body>
<div class="container">



<div id="sidebar">
	<% @orders.each do |order| %>
	<span> <%= order.product.prname %>  </span>
	 <br>
	
	 	<div class="fancybox">
	  <%= image_tag order.product.photo_file_name, size: '350x210'%> 
	  </div>
	  <br>
	 

	<span>  Від <%= order.product.cost%> за добу </span> 

	<br> 
	<h4>Перейти на сайт</h4>
	<%= link_to "Delete", delete_order_path(:id=>order.id), method: :put, data: {confirm: 'are_you_sure?'}, class: 'btn btn-sm btn-size btn-info' %> 
	<hr>

	<%end%>

</div>


	<div id="map"></div>


</div>


<script src="https://maps.googleapis.com/maps/api/js"></script>
<script>
	
function initialize(){

 var features = [
          {
            position: new google.maps.LatLng(48.625148, 22.947258),
            type: 'info'
          }, {
            position: new google.maps.LatLng(48.5610078, 22.4374783),
            type: 'info'
          }, {
            position: new google.maps.LatLng(48.6236075, 22.9333669),
            type: 'info'
          }];

 		features.forEach(function(feature) {
          var marker = new google.maps.Marker({
            position: feature.position
           
          });
        });
		var mapCanvas = document.getElementById('map');
		var mapOptions = {
			center: new google.maps.LatLng(48.27,22.9),
			zoom: 8,
			mapTypeId: google.maps.MapTypeId.ROADMAP
		}
		var map = new google.maps.Map(mapCanvas, mapOptions);

		

		marker.setMap(map);
	}
	google.maps.event.addDomListener(window, 'load', initialize);

</script>

</body>