  <div id="formContent">
    <!-- Tabs Titles -->
    <h2 class="active"> Log In </h2>
    
    <!-- Icon -->
    <div class="fadeIn first">
      <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <%= f.label :email, :id => "login", :class => "fadeIn second"%><br />
      <%= f.email_field :email, :id => "login" %>
      <br >

      <%= f.label :password, :id => "password", :class => "fadeIn third"%><br />
      <%= f.password_field :password, autocomplete: "off", :id => "password" %>

      <br>
      <%= f.submit "Log in", :class => "fadeIn fourth" %>
  
    <!-- Remind Passowrd -->
    <div id="formFooter">
      <% if devise_mapping.rememberable? -%>
    
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
  
  <% end -%>
  <% end %>

    </div>

  </div>
